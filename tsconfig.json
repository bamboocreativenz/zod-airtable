{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "./lib/esm",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"allowImportingTsExtensions": true,
		"target": "ES2021"
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
